<form method = "post" >
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="contactName" > Your name :</label>
            <input type="text" class="form-control" value="{{ contactName }}" name="contactName">
            {% if contactNameError %}
                <p>{{ contactNameError }}</p>
            {% endif %}
        </div>
        <div class="form-group col-md-6">
            <label for="contactEmail" > Your email :</label>
            <input type="email" class="form-control" value="{{ contactEmail }}" name="contactEmail">
            {% if contactEmailError %}
                <p>{{ contactEmailError }}</p>
            {% endif %}
        </div>
        <div class="form-group col-md-6">
            <label for="subject" > Subject of your message :</label>
            <input type="text" class="form-control" value="{{ subject }}" name="subject">
            {% if subjectError %}
                <p>{{ subjectError }}</p>
            {% endif %}
        </div>
    </div>
    <div class="form-group">
        <label for="content" > Message :</label>
        <textarea name="content" class="form-control" id="content" rows="5" cols="50">{{ content }}</textarea>
    </div>
    <button type="submit" class="btn btn-info">Send</button>
</form>